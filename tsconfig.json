{
  "compilerOptions": {

    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "out" ,
    "baseUrl": "src" ,
    "lib":  ["es2015" , "dom"]
  },
  "exclude": [
    "out",
    "node_modules",
    "dist",
    "dev",
    "typings/main.d.ts",
    "typings/main",
    "reports" , 
    "test.ts",
    "./src/**/*.spec.ts"
  ],
  "version": "2.1.5"
}